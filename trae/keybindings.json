// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+shift+j",
        "command": "vim.remap",
        "when": "vim.active",
        "args": {
            "after": [
                "1",
                "0",
                "j"
            ]
        }
    },
    {
        "key": "ctrl+shift+k",
        "command": "vim.remap",
        "when": "vim.active",
        "args": {
            "after": [
                "1",
                "0",
                "k"
            ]
        }
    },
    {
        "key": "cmd+shift+j",
        "command": "vim.remap",
        "when": "vim.active && isMac",
        "args": {
            "after": [
                "1",
                "0",
                "j"
            ]
        }
    },
    {
        "key": "cmd+shift+k",
        "command": "vim.remap",
        "when": "vim.active && isMac",
        "args": {
            "after": [
                "1",
                "0",
                "k"
            ]
        }
    },
    {
        "key": "ctrl+k b",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.toggleSidebarVisibility",
                "workbench.action.toggleAuxiliaryBar"
            ]
        }
    },
    {
        "key": "cmd+k b",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.toggleSidebarVisibility",
                "workbench.action.toggleAuxiliaryBar"
            ]
        }
    },
    {
        "key": "cmd+shift+g",
        "command": "workbench.view.scm",
        "when": "isMac"
    },
    {
        "key": "ctrl+shift+g",
        "command": "workbench.view.scm",
        "when": "!isMac"
    }
]