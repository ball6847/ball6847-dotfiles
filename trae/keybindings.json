// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+shift+j",
        "command": "vim.remap",
        "when": "vim.active",
        "args": {
            "after": [
                "1",
                "0",
                "j"
            ]
        }
    },
    {
        "key": "ctrl+shift+k",
        "command": "vim.remap",
        "when": "vim.active",
        "args": {
            "after": [
                "1",
                "0",
                "k"
            ]
        }
    },
    {
        "key": "cmd+shift+j",
        "command": "vim.remap",
        "when": "vim.active && isMac",
        "args": {
            "after": [
                "1",
                "0",
                "j"
            ]
        }
    },
    {
        "key": "cmd+shift+k",
        "command": "vim.remap",
        "when": "vim.active && isMac",
        "args": {
            "after": [
                "1",
                "0",
                "k"
            ]
        }
    },
    {
        "key": "ctrl+k b",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.toggleSidebarVisibility",
                "workbench.action.toggleAuxiliaryBar"
            ]
        }
    },
    {
        "key": "cmd+k b",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.toggleSidebarVisibility",
                "workbench.action.toggleAuxiliaryBar"
            ]
        }
    },
    {
        "key": "cmd+shift+g",
        "command": "workbench.scm.focus",
        "when": "isMac"
    },
    {
        "key": "ctrl+shift+g",
        "command": "workbench.scm.focus",
        "when": "!isMac"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.terminal.new",
        "when": "!isMac && terminalFocus"
    },
    {
        "key": "cmd+n",
        "command": "workbench.action.terminal.new",
        "when": "isMac && terminalFocus"
    },
    {
        "key": "ctrl+\\",
        "command": "workbench.action.terminal.split",
        "when": "!isMac && terminalFocus"
    },
    {
        "key": "cmd+\\",
        "command": "workbench.action.terminal.split",
        "when": "isMac && terminalFocus"
    },
    {
        "key": "ctrl+shift+]",
        "command": "workbench.action.nextEditor",
        "when": "!terminalFocus && !isMac"
    },
    {
        "key": "ctrl+shift+[",
        "command": "workbench.action.previousEditor",
        "when": "!terminalFocus && !isMac"
    },
    {
        "key": "ctrl+shift+]",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus && !isMac"
    },
    {
        "key": "ctrl+shift+[",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus && !isMac"
    },
    {
        "key": "shift+w",
        "command": "workbench.files.action.collapseExplorerFolders",
        "when": "filesExplorerFocus"
    },
    {
        "key": "ctrl+k space",
        "command": "editor.action.triggerSuggest",
        "when": "!isMac && editorFocus"
    },
    {
        "key": "cmd+k space",
        "command": "editor.action.triggerSuggest",
        "when": "isMac && editorFocus"
    },
    // Roo Code related Shortcut
    {
        "key": "ctrl+k u", // cannot use ctrl+k ctrl+u as it reserved by trae
        "command": "roo-cline.addToContext",
        "isAIItem": false,
        "when": "!isMac"
    },
    {
        "key": "cmd+k u",
        "command": "roo-cline.addToContext",
        "isAIItem": false,
        "when": "isMac"
    },
    {
        "key": "ctrl+k ctrl+i",
        "command": "roo-cline.newTask",
        "isAIItem": false,
        "when": "!isMac"
    },
    {
        "key": "cmd+k cmd+i",
        "command": "roo-cline.newTask",
        "isAIItem": false,
        "when": "isMac"
    },
    {
        "key": "ctrl+k ctrl+n",
        "command": "roo-cline.openInNewTab",
        "when": "!isMac"
    },
    {
        "key": "cmd+k cmd+n",
        "command": "roo-cline.openInNewTab",
        "when": "isMac"
    },
    {
        "key": "ctrl+k ctrl+k",
        "command": "roo-cline.focusInput",
        "isAIItem": false,
        "when": "!isMac"
    },
    {
        "key": "cmd+k cmd+k",
        "command": "roo-cline.focusInput",
        "isAIItem": false,
        "when": "isMac"
    },
    {
        "key": "ctrl+k ctrl+j",
        "command": "roo-cline.acceptInput",
        "when": "!isMac && roo-cline.SidebarProvider.visible"
    },
    {
        "key": "cmd+k cmd+j",
        "command": "roo-cline.acceptInput",
        "when": "isMac && roo-cline.SidebarProvider.visible"
    },
    {
        "key": "shift+enter",
        "command": "-workbench.action.terminal.runSelectedText",
        "when": "terminalFocus && !terminalTextSelected"
    },
    {
        "key": "shift+enter",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            "text": "\\\n"
        },
        "when": "terminalFocus"
    },
    {
        "key": "cmd+k cmd+o",
        "command": "opencode.openNewTerminal",
        "when": "isMac"
    },
    {
        "key": "shift+cmd+escape",
        "command": "-opencode.openNewTerminal",
        "when": "isMac"
    },
    {
        "key": "ctrl+k ctrl+o",
        "command": "opencode.openNewTerminal",
        "when": "!isMac"
    },
    {
        "key": "shift+ctrl+escape",
        "command": "-opencode.openNewTerminal",
        "when": "!isMac"
    },
    {
        "key": "cmd+k cmd+p",
        "command": "opencode.addFilepathToTerminal"
    },
    {
        "key": "alt+cmd+k",
        "command": "-opencode.addFilepathToTerminal"
    }
]
