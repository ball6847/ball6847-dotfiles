// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+shift+j",
        "command": "vim.remap",
        "when": "vim.active",
        "args": {
            "after": [
                "1",
                "0",
                "j"
            ]
        }
    },
    {
        "key": "ctrl+shift+k",
        "command": "vim.remap",
        "when": "vim.active",
        "args": {
            "after": [
                "1",
                "0",
                "k"
            ]
        }
    },
    {
        "key": "cmd+shift+j",
        "command": "vim.remap",
        "when": "vim.active && isMac",
        "args": {
            "after": [
                "1",
                "0",
                "j"
            ]
        }
    },
    {
        "key": "cmd+shift+k",
        "command": "vim.remap",
        "when": "vim.active && isMac",
        "args": {
            "after": [
                "1",
                "0",
                "k"
            ]
        }
    }
]