{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoupdate": false,
  "instructions": [
    "AGENTS.md"
  ],
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama Cloud",
      "options": {
        "baseURL": "https://ollama.com/v1",
        "headers": {
          "Authorization": "Bearer {env:OLLAMA_API_KEY}"
        }
      },
      "models": {
        "deepseek-v3.1:671b": {
          "name": "DeepSeek-V3.1-671B"
        },
        "gpt-oss:20b": {
          "name": "GPT-OSS-20B"
        },
        "gpt-oss:120b": {
          "name": "GPT-OSS-120B"
        },
        "kimi-k2:1t": {
          "name": "Kimi-K2-1T"
        },
        "qwen3-coder:480b": {
          "name": "Qwen3-Coder-480B"
        },
        "glm-4.6": {
          "name": "GLM-4.6"
        },
      }
    }
  }
}
