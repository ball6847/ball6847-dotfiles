{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoupdate": false,
  "instructions": ["AGENTS.md"],
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama Cloud",
      "options": {
        "baseURL": "https://ollama.com/v1",
        "headers": {
          "Authorization": "Bearer {env:OLLAMA_API_KEY}"
        }
      },
      "models": {
        "deepseek-v3.1:671b": {
          "name": "DeepSeek-V3.1-671B",
          "limit": {
            "context": 160000,
            "output": 160000
          }
        },
        "gpt-oss:20b": {
          "name": "GPT-OSS-20B",
          "limit": {
            "context": 128000,
            "output": 128000
          }
        },
        "gpt-oss:120b": {
          "name": "GPT-OSS-120B",
          "limit": {
            "context": 128000,
            "output": 128000
          }
        },
        "kimi-k2:1t": {
          "name": "Kimi-K2-1T",
          "limit": {
            "context": 256000,
            "output": 256000
          }
        },
        "qwen3-coder:480b": {
          "name": "Qwen3-Coder-480B",
          "limit": {
            "context": 256000,
            "output": 256000
          }
        },
        "glm-4.6": {
          "name": "GLM-4.6",
          "limit": {
            "context": 198000,
            "output": 198000
          }
        },
        "minimax-m2": {
          "name": "MiniMax-M2",
          "limit": {
            "context": 200000,
            "output": 200000
          }
        }
      }
    }
  },
  "mcp": {
    "jina": {
      "type": "remote",
      "url": "https://mcp.jina.ai/sse",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {env:JINA_API_KEY}"
      }
    },
    "wait": {
      "type": "local",
      "command": ["mcp-wait"],
      "environment": {
        "TRANSPORT_TYPE": "stdio"
      },
      "enabled": true
    }
  },
  "agent": {
    "explore": {
      "description": "Explore project context for PLAN agent analysis",
      "mode": "primary",
      "prompt": "You are an EXPLORE agent that specializes in understanding project context. Your role is to investigate the codebase structure, identify relevant files, and gather information that will help the PLAN agent make informed decisions. Focus on reading files, understanding directory structure, and identifying key components. You can use all available tools to explore the project but cannot make any changes to files. Your output should summarize findings relevant to the user's request.",
      "permission": {
        "edit": "deny",
        "bash": "ask"
      }
    }
  }
}
